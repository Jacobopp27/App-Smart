# Database Configuration
# Replace with your actual PostgreSQL database URL
# Format: postgresql://username:password@hostname:port/database_name
DATABASE_URL=postgresql://postgres:password@localhost:5432/techtest

# JWT Authentication Secret
# IMPORTANT: Change this to a secure random string in production
# Must be at least 32 characters long for security
# You can generate one using: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars

# Server Configuration
# Port for the application server (both API and frontend)
PORT=5000

# Node Environment
# Set to 'production' for production deployments
NODE_ENV=development

# PostgreSQL Connection Details (alternative to DATABASE_URL)
# These can be used instead of DATABASE_URL if preferred
PGHOST=localhost
PGPORT=5432
PGDATABASE=techtest
PGUSER=postgres
PGPASSWORD=password

# Security Configuration
# Session secret for additional security (optional)
SESSION_SECRET=another-secret-key-for-sessions

# Frontend Configuration
# API base URL (usually same as backend in this setup)
VITE_API_URL=http://localhost:5000

# CORS Configuration
# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Database Pool Configuration (optional)
# Maximum number of database connections
DB_POOL_MAX=20
# Minimum number of database connections
DB_POOL_MIN=5

# Logging Configuration
# Log level for application logs
LOG_LEVEL=info

# Rate Limiting (optional)
# Maximum requests per window per IP
RATE_LIMIT_MAX=100
# Time window in minutes
RATE_LIMIT_WINDOW=15

# Password Security (optional)
# Bcrypt salt rounds (higher = more secure but slower)
BCRYPT_ROUNDS=12

# JWT Configuration (optional)
# Token expiration time
JWT_EXPIRES_IN=24h
# Refresh token expiration
JWT_REFRESH_EXPIRES_IN=7d

# File Upload Configuration (optional)
# Maximum file size in MB
MAX_FILE_SIZE=10

# Email Configuration (optional for future features)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Redis Configuration (optional for caching)
# REDIS_URL=redis://localhost:6379

# Monitoring (optional)
# SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Development only - Database seeding
# Set to true to automatically seed database on startup
AUTO_SEED=false

# API Documentation
# Enable/disable Swagger documentation endpoint
ENABLE_DOCS=true

# Security Headers (optional)
# Enable additional security headers
ENABLE_SECURITY_HEADERS=true

# HTTPS Configuration (production)
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# Backup Configuration (optional)
# DATABASE_BACKUP_INTERVAL=daily
# BACKUP_RETENTION_DAYS=30
